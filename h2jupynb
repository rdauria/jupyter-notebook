# Start a background countdown so the main thread remains responsive to Ctrl-C.
countdown = Countdown(timeinhours * 3600, interval=10)
countdown.start()
try:
  while countdown.is_alive():
    countdown.join(timeout=1)
except KeyboardInterrupt:
  print('\nCtrl-C pressed. Cleaning up...')
finally:
  countdown.stop()
  countdown.join(timeout=2)

# Clean up child processes
try:
  pqsub.kill()
except Exception:
  pass
try:
  ptunnel.kill()
except Exception:
  pass

print("Elapsted runtime. Terminating...")
print("Succesfully cleaned up connections.")



